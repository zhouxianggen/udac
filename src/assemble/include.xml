<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>jar-with-dependencies</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
		<!-- 
			<includes>
				<include>storm:trident-memcached</include>
				<include>uc-storm:storm-try</include>
				<include>spy:spymemcached</include>
				<include>com.thimbleware.jmemcached:jmemcached-cli</include>
				<include>com.thimbleware.jmemcached:jmemcached-core</include>
			</includes> -->
			<excludes>
				<exclude>storm:storm</exclude>
			</excludes>
			<outputDirectory>/</outputDirectory>
			<useProjectArtifact>true</useProjectArtifact>
			<unpack>true</unpack>
			<scope>runtime</scope>
		</dependencySet>
	</dependencySets>
</assembly>